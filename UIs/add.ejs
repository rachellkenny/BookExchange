<%- include('includes/loggedInNav') %>

    <div class="container" id="add">
      <p class="display-4">Add a Book</p>
      <% errors.forEach(function(message) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% }) %>
      <form action="/addFunction" method="POST" id="add-book-form">
        <div class="form-group">
          <label for="isbn" class="text-muted mb-1"><small>ISBN</small></label>
          <input
            name="isbn"
            id="isbn"
            class="form-control"
            type="text"
            placeholder="ISBN"
            autocomplete="off"
          />
        </div>
        <div class="form-group">
          <label for="title" class="text-muted mb-1"
            ><small>Title</small></label
          >
          <input
            name="title"
            id="title"
            class="form-control"
            type="text"
            placeholder="Title"
            autocomplete="off"
          />
        </div>

        <div class="form-group">
          <label for="author" class="text-muted mb-1"
            ><small>Author</small></label
          >
          <input
            name="author"
            id="author"
            class="form-control"
            type="text"
            placeholder="Author"
            autocomplete="off"
          />
        </div>

        <div class="form-group">
          <label for="subject" class="text-muted mb-1"
            ><small>Subject</small></label
          >

          <%- include('includes/subjectList') %>

        </div>
        <div class="form-group">
          <label for="course" class="text-muted mb-1"
            ><small>Course Number</small></label
          >
          <input
            name="course"
            id="course"
            class="form-control"
            type="text"
            placeholder="Course Number"
          />
        </div>

        <button type="submit" class="btn btn-info">
          Add a Book
        </button>
      </form>
    </div>
  </body>
</html>
